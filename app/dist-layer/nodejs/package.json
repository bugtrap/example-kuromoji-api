  "license": "Apache-2.0",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "clean": "rimraf dist dist-layer reports",
    "lint": "run-s lint:*",
    "lint:cspell": "cspell lint --gitignore --no-progress src/**/*.ts",
    "lint:prettier": "prettier --check src/**/*.ts",
    "lint:eslint": "eslint src/**/*.ts",
    "build": "run-s build:*",
    "build:app": "node esbuild.mjs",
    "build:layer": "cpy ./package.json dist-layer/nodejs/ && cd dist-layer/nodejs/ && echo #>pnpm-workspace.yaml && pnpm install --prod --config.node_linker=hoisted && del node_modules\\.modules.yaml",
    "test": "run-s test:*",
    "test:jest": "jest",
    "test:code-pass": "tsc --noEmit",
    "bootstrap": "run-s clean lint test build"
  },
  "devDependencies": {
    "@types/aws-lambda": "~8.10.114",
    "@types/jest": "~29.5.1",
    "@types/node": "~18.15.13",
    "@typescript-eslint/eslint-plugin": "~5.59.0",
    "@typescript-eslint/parser": "~5.59.0",
    "cpy-cli": "~4.2.0",
    "cspell": "^6.31.1",
    "esbuild": "~0.17.17",
    "eslint": "~8.38.0",
    "eslint-config-prettier": "~8.8.0",
    "eslint-plugin-import": "~2.27.5",
    "eslint-plugin-typescript-enum": "~2.1.0",
    "eslint-plugin-unused-imports": "~2.0.0",
    "jest": "~29.5.0",
    "jest-junit": "~16.0.0",
    "npm-run-all": "~4.1.5",
    "prettier": "~2.8.7",
    "rimraf": "^5.0.0",
    "ts-jest": "~29.1.0",
    "ts-node": "~10.9.1",
    "tsconfig-paths": "~4.2.0",
    "typescript": "~5.0.4"
  },
  "dependencies": {
    "kuromoji": "~0.1.2",
    "kuromojin": "~3.0.0"
  }
}
